<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.usuario.laformamasfacil.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Â¿Cual de estas es mujer?"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="900px"
        android:layout_height="wrap_content"
        android:text="Calificar"
        android:id="@+id/button"
        android:layout_marginBottom="28dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#39df3b" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView2"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/radioGroup">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="291dp">

        <RadioButton
            android:layout_width="116dp"
            android:layout_height="96dp"
            android:text="Warmi5"
            android:id="@+id/radioButton3"
            android:layout_gravity="left"
            android:checked="false"
            android:gravity="left|bottom"
            android:textStyle="bold"
            android:background="@drawable/mujer"
            android:layout_above="@+id/radioButton4"
            android:layout_alignRight="@+id/radioButton4"
            android:layout_alignEnd="@+id/radioButton4"
            android:layout_marginBottom="40dp" />

        <RadioButton
            android:layout_width="117dp"
            android:layout_height="91dp"
            android:text="Tumi"
            android:id="@+id/radioButton4"
            android:checked="false"
            android:textStyle="bold"
            android:gravity="left|bottom"
            android:background="@drawable/cuchillo"
            android:layout_alignTop="@+id/radioButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioButton
            android:layout_width="110dp"
            android:layout_height="99dp"
            android:text="Q&apos;uncha"
            android:id="@+id/radioButton"
            android:checked="false"
            android:gravity="left|bottom"
            android:textStyle="bold"
            android:background="@drawable/cocina"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp" />

            <RadioButton
                android:layout_width="116dp"
                android:layout_height="88dp"
                android:text="Waka"
                android:id="@+id/radioButton2"
                android:checked="false"
                android:textStyle="bold"
                android:gravity="left|bottom"
                android:background="@drawable/vacaa"
                android:layout_gravity="right"
                android:layout_alignBottom="@+id/radioButton3"
                android:layout_alignRight="@+id/radioButton"
                android:layout_alignEnd="@+id/radioButton" />
        </RelativeLayout>
    </RadioGroup>

</RelativeLayout>
